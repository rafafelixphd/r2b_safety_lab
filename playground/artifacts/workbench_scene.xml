<mujoco model="workbench_scene">
    <extension>
        <plugin plugin="mujoco.sensor.touch_grid"/>
    </extension>

    <statistic center="0 0 0.5" extent="2.0"/>
    
    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0.1 0.1 0.1"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="140" elevation="-20"/>
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
        
        <texture type="2d" name="bench_tex" builtin="flat" rgb1="0.7 0.7 0.7" width="100" height="100"/>
        <material name="bench_mat" texture="bench_tex" specular="0.5" shininess="0.5"/>
    </asset>

    <worldbody>
        <!-- Floor -->
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" condim="3"/>
        
        <!-- Lights -->
        <light pos="0 0 3" dir="0 0 -1" directional="true" castshadow="true" diffuse="0.8 0.8 0.8"/>
        
        <!-- Workbench -->
        <!-- Center of bench (z is half-height) pos="0 0 0.4" -->
        <body name="workbench" pos="0 0 0.4">
            <!-- Half-sizes [lx, ly, lz] -> 1.2m x 0.8m x 0.8m size="0.6 0.4 0.4" -->
            <geom type="box" size="0.6 0.4 0.4" rgba="0.2 0.2 0.2 1" material="bench_mat"/>
        </body>

        <!-- Robot Mount Point -->
        <!-- We place the robot on top of the bench pos="0 0 0.8" -->
        <body name="robot_mount" pos="0 0 0.8">
            <include file="{{ROBOT_PATH}}"/>
        </body>
    </worldbody>
</mujoco>
